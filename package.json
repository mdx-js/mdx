    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "estree-util-value-to-estree": "^2.0.0",
    "globby": "^13.0.0",
    "hast-to-hyperscript": "^10.0.0",
    "hast-util-select": "^5.0.0",
    "hast-util-to-jsx-runtime": "^2.0.0",
    "hast-util-to-text": "^3.0.0",

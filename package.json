{
  "repository": "mdx-js/mdx",
  "homepage": "https://mdxjs.com",
  "bugs": "https://github.com/mdx-js/mdx/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "build": "r -f cjs,esm -o dist --exclude 'babel-plugin-*,create-mdx,*loader,mdx,parcel-plugin-mdx,remark-*,*util'",
    "clean": "lerna exec \"rimraf dist node_modules\"",
    "docs": "gatsby develop",
    "docs-build": "gatsby build",
    "docs-deploy": "now && now alias $(pbpaste) mdxjs.com && now alias $(pbpaste) www.mdxjs.com",
    "format": "yarn lint --fix",
    "lint": "eslint . --cache --ext js,md,mdx -f friendly",
    "now-build": "yarn build && yarn docs-build",
    "postinstall": "yarn-deduplicate || exit 0",
    "prepublishOnly": "yarn build",
    "pretest": "yarn build",
    "publish": "lerna publish --force-publish=\"*\"",
    "publish-ci": "lerna publish prerelease -y --force-publish=\"*\" --dist-tag ci --no-push --no-git-tag-version",
    "publish-next": "lerna publish --force-publish=\"*\" --dist-tag next --preid rc",
    "test": "jest --runInBand --detectOpenHandles"
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/plugin-syntax-jsx": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "@mapbox/rehype-prism": "0.4.0",
    "@mdx-js/mdx": "^1.5.1",
    "@mdx-js/react": "^1.5.1",
    "@mdx-js/test-util": "^1.5.1",
    "@mdx-js/vue": "^1.5.1",
    "@pkgr/rollup": "0.9.5",
    "@vue/babel-preset-jsx": "1.1.2",
    "@vue/test-utils": "1.0.0-beta.31",
    "babel-helper-vue-jsx-merge-props": "2.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-macros": "2.8.0",
    "babel-plugin-remove-export-keywords": "^1.5.1",
    "babel-plugin-transform-vue-jsx": "4.0.1",
    "core-js": "2.6.11",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-xo": "0.27.2",
    "eslint-formatter-friendly": "7.0.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-mdx": "1.6.8",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "gatsby": "^2.19.5",
    "hast-util-select": "3.0.1",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.2",
    "memory-fs": "0.5.0",
    "prettier": "prettier/prettier",
    "prettier-plugin-pkg": "0.4.10",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "rehype-add-classes": "1.0.0",
    "rehype-katex": "2.0.0",
    "remark-autolink-headings": "5.2.1",
    "remark-math": "2.0.0",
    "remark-mdx": "^1.5.1",
    "remark-parse": "7.0.2",
    "remark-preset-prettier": "^0.3.0",
    "remark-preset-wooorm": "6.0.1",
    "remark-slug": "5.1.2",
    "remark-stringify": "7.0.4",
    "retext-english": "^3.0.4",
    "retext-preset-wooorm": "^2.0.0",
    "retext-sentence-spacing": "^3.0.0",
    "rimraf": "3.0.0",
    "typescript": "3.7.5",
    "unified": "8.4.2",
    "vfile": "4.0.2",
    "vue": "2.6.11",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.41.5",
    "yarn-deduplicate": "^1.1.1"
  },
  "resolutions": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/.cache/",
      "<rootDir>/examples/create-react-app",
      "<rootDir>/packages/vue",
      "<rootDir>/packages/vue-loader"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,md,mdx}": [
      "eslint --cache --fix -f friendly"
    ],
    "*.{css,html,json,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  }
}
